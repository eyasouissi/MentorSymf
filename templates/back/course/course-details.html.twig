{% extends 'back/baseback.html.twig' %}

{% block title %}Course Details{% endblock %}

{% block body %}
<div class="container py-5">
    <h1 class="text-center mb-4">Course Details</h1>

    <div class="card p-4 shadow">
        <h2>{{ course.title }}</h2>
        <p><strong>Category:</strong> {{ course.category.name }}</p>
        <p><strong>Created At:</strong> {{ course.createdAt|date('d/m/Y') }}</p>

        <h3 class="mt-4">Levels</h3>
        <ul class="list-group">
            {% for level in course.levels %}
                <li class="list-group-item">
                    <strong>{{ level.name }}</strong>
                    <ul>
                        {% for file in level.files %}
                            <li>{{ file.fileName }}</li>
                        {% else %}
                            <li>No files for this level.</li>
                        {% endfor %}
                    </ul>
                </li>
            {% else %}
                <li class="list-group-item">No levels added yet.</li>
            {% endfor %}
        </ul>
    </div>

    <div class="mt-4">
        <a href="{{ path('admin_courses_list') }}" class="btn btn-secondary">Back to List</a>
    </div>
</div>
{% endblock %}
