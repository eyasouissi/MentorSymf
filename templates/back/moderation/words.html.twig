{% extends 'back/baseback.html.twig' %}

{% block title %}Prohibited Words List{% endblock %}

{% block body %}
<div class="container mt-4">
    <div class="card">
        <div class="card-header d-flex justify-content-between align-items-center">
            <h2>Prohibited Words Management</h2>
            <a href="{{ path('new_prohibited_word') }}" class="btn btn-primary">
                <i class="bi bi-plus-circle"></i> Add New Word
            </a>
        </div>
        
        <div class="card-body">
            {% for message in app.flashes('success') %}
                <div class="alert alert-success">
                    {{ message }}
                </div>
            {% endfor %}

            <table class="table table-hover">
                <thead class="table-dark">
                    <tr>
                        <th>Word</th>
                        <th>Category</th>
                        <th>Severity</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    {% for word in words %}
                        <tr>
                            <td>{{ word.word }}</td>
                            <td>{{ word.category|replace({'_': ' '})|title }}</td>
                            <td>
                                <span class="badge bg-primary">
                                    Level {{ word.severity }}
                                </span>
                            </td>
                            <td>
                                <a href="{{ path('edit_prohibited_word', {'id': word.id}) }}" 
                                   class="btn btn-sm btn-warning">
                                    <i class="bi bi-pencil"></i> Edit
                                </a>
                                
                                <form method="post" action="{{ path('delete_prohibited_word', {'id': word.id}) }}" 
                                      style="display: inline-block"
                                      onsubmit="return confirm('Are you sure you want to delete this word?')">
                                    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ word.id) }}">
                                    <button class="btn btn-sm btn-danger">
                                        <i class="bi bi-trash"></i> Delete
                                    </button>
                                </form>
                            </td>
                        </tr>
                    {% else %}
                        <tr>
                            <td colspan="4" class="text-center">No prohibited words found</td>
                        </tr>
                    {% endfor %}
                </tbody>
            </table>
        </div>
    </div>
</div>
{% endblock %}