{% extends 'back/baseback.html.twig' %}

{% block title %}Liste des Événements - Back Office{% endblock %}

{% block body %}
<div class="main-panel" style="margin-left: 160px; padding: 20px;">
    <div class="container mt-5">
        <h1 class="text-center mb-4">Liste des Événements</h1>

        <div class="mb-3 d-flex justify-content-end">
            <a href="{{ path('evenement_newback') }}" class="btn btn-success me-2">Ajouter un Événement</a>
            <a href="{{ path('ajouter_annonceback') }}" class="btn btn-success">Ajouter une annonce</a>
        </div>

        <!-- Search bar with Bootstrap design -->
        <div class="mb-4 d-flex justify-content-between align-items-center">
     <form method="get" action="{{ path('evenement_indexback') }}" class="d-flex">
    <div class="input-group mb-3">
        <input type="text" name="search" value="{{ searchTerm }}" class="form-control" placeholder="Rechercher..." aria-label="Search">
        <button type="submit" class="btn btn-outline-primary">Rechercher</button>
    </div>
    <br>
   <div class="btn-group mb-3">
        <button type="submit" name="orderBy" value="ASC" class="btn {{ orderBy == 'ASC' ? 'btn-primary' : 'btn-secondary' }} btn-sm">
            Tri Ascendant
        </button>
        <button type="submit" name="orderBy" value="DESC" class="btn {{ orderBy == 'DESC' ? 'btn-primary' : 'btn-secondary' }} btn-sm">
            Tri Descendant
        </button>
    </div>
</form>

        </div>

        {% if evenements is not empty %}
            <div class="table-responsive" style="margin-left: auto; margin-right: 0;">
                <table class="table table-striped table-bordered" style="margin: 0 auto; width: 90%;">
                    <thead>
                        <tr>
                            <th>Titre Événement</th>
                            <th>Description</th>
                            <th>Date de Début</th>
                            <th>Date de Fin</th>
                            <th>Titre Annonce Associée</th>
                            <th>Image</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        {% for evenement in evenements %}
                            <tr>
                                <td>{{ evenement.getTitreE() }}</td>
                                <td>{{ evenement.getDescriptionE()|slice(0, 50) ~ '...' }}</td>
                                <td>{{ evenement.getDateDebut()|date('Y-m-d H:i') }}</td>
                                <td>{{ evenement.getDateFin()|date('Y-m-d H:i') }}</td>
                                <td>
                                    {% if evenement.getAnnonce() %}
                                        {{ evenement.getAnnonce().getTitreA() }}
                                    {% else %}
                                        Aucune annonce associée
                                    {% endif %}
                                </td>
                                <td>
                                    {% if evenement.getImageE() %}
                                        <img src="{{ asset('uploads/' ~ evenement.getImageE()) }}" alt="Image de l'Événement" style="max-width: 100px;">
                                    {% else %}
                                        <img src="{{ asset('uploads/default-image.jpg') }}" alt="Image par défaut" style="max-width: 100px;">
                                    {% endif %}
                                </td>
                                <td>
                                    <a href="{{ path('evenement_editback', {'id': evenement.id}) }}" class="btn btn-warning btn-sm">Modifier</a>
                                    <form action="{{ path('evenement_deleteback', {'id': evenement.id}) }}" method="post" style="display: inline;">
                                        <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ evenement.id) }}">
                                        <button type="submit" class="btn btn-danger btn-sm" onclick="return confirm('Êtes-vous sûr de vouloir supprimer cet événement ?')">Supprimer</button>
                                    </form>
                                </td>
                            </tr>
                        {% endfor %}
                    </tbody>
                </table>
            </div>
        {% else %}
            <p class="text-muted text-center">Aucun événement trouvé.</p>
        {% endif %}
    </div>
</div>
{% endblock %}
