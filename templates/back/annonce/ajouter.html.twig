    padding: 20px;
}

/* Card body padding */
.card-body {
    padding: 30px;
}



.form-control:focus {
    border-color: #007bff;
    box-shadow: 0 0 5px rgba(0, 123, 255, 0.5);
}

/* Submit button styling */
.btn-primary {
    background-color: #007bff;
    border-color: #007bff;
    padding: 12px;
    font-size: 16px;
    font-weight: bold;
    border-radius: 5px;
    transition: all 0.3s ease;
}

.btn-primary:hover {
    background-color: #0056b3;
    border-color: #0056b3;
}

/* Flash message styling */


    </style>
