{% extends 'back/baseback.html.twig' %}

{% block title %}Liste des Annonces - Back Office{% endblock %}

{% block body %}
<div class="main-panel" style="margin-left: 160px; padding: 20px;">
    <div class="container mt-5">
        <h1 class="text-center mb-4">Liste des Annonces</h1>

        <div class="mb-3 d-flex justify-content-end">
            <a href="{{ path('ajouter_annonceback') }}" class="btn btn-success">Ajouter une Annonce</a>
        </div>

        {% if annonces is not empty %}
            <div class="table-responsive" style="margin-left: auto; margin-right: 0;">
                <table class="table table-striped table-bordered" style="margin: 0 auto; width: 90%;">
                    <thead>
                        <tr>
                            <th>Titre</th>
                            <th>Description</th>
                            <th>Date</th>
                            <th>Image</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        {% for annonce in annonces %}
                            <tr>
                                <td>{{ annonce.getTitreA() }}</td>
                                <td>{{ annonce.getDescriptionA()|slice(0, 50) ~ '...' }}</td>
                                <td>{{ annonce.getDateA()|date('Y-m-d') }}</td>
                                <td>
                                    {% if annonce.imageA %}
                                        <img src="{{ asset('uploads/' ~ annonce.imageA) }}" alt="Annonce Image" style="max-width: 100px;">
                                    {% else %}
                                        <img src="{{ asset('uploads/default-image.jpg') }}" alt="Default Image" style="max-width: 100px;">
                                    {% endif %}
                                </td>
                                <td>
                                    <a href="{{ path('evenement_indexback', {'id': annonce.id}) }}" class="btn btn-primary btn-sm">Voir</a>
                                    <a href="{{ path('app_annonce_editback', {'id': annonce.id}) }}" class="btn btn-warning btn-sm">Modifier</a>
                                    <a href="{{ path('app_annonce_deleteback', {'id': annonce.id}) }}" class="btn btn-danger btn-sm" onclick="return confirm('Êtes-vous sûr de vouloir supprimer cette annonce ?')">Supprimer</a>
                                </td>
                            </tr>
                        {% endfor %}
                    </tbody>
                </table>
            </div>
        {% else %}
            <p class="text-muted text-center">Aucune annonce trouvée.</p>
        {% endif %}
    </div>
{% endblock %}
