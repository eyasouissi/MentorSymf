{% extends 'base.html.twig' %}

{% block title %}Create new project{% endblock %}

{% block stylesheets %}
    <link href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet">
    <style>
        body {
            background-color: #f8f9fa;
            font-family: 'Arial', sans-serif;
        }
        .form-container {
            background: #ffffff;
            padding: 2rem;
            border-radius: 10px;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
            max-width: 600px;
            margin: 2rem auto;
        }
        .form-container h1 {
            color: #343a40;
            margin-bottom: 1.5rem;
            font-weight: bold;
        }
        .form-group label {
            font-weight: bold;
            color: #495057;
        }
        .form-control {
            border-radius: 5px;
            border: 1px solid #ced4da;
        }
        .btn-primary {
            background-color: #007bff;
            border: none;
            padding: 0.5rem 1rem;
            border-radius: 5px;
            font-size: 1rem;
        }
        .btn-primary:hover {
            background-color: #0056b3;
        }
        .file-upload {
            border: 2px dashed #007bff;
            padding: 1rem;
            text-align: center;
            border-radius: 5px;
            background-color: #f1f8ff;
            margin-bottom: 1rem;
        }
        .file-upload input[type="file"] {
            display: none;
        }
        .file-upload label {
            cursor: pointer;
            color: #007bff;
            font-weight: bold;
        }
    </style>
{% endblock %}

{% block body %}
    <div class="form-container">
        <h1>Create new project</h1>

        {{ form_start(form, {'attr': {'enctype': 'multipart/form-data'}}) }}

            <div class="form-group">
                {{ form_label(form.titre) }}
                {{ form_widget(form.titre) }}
            </div>

            <div class="form-group">
                {{ form_label(form.description_project) }}
                {{ form_widget(form.description_project) }}
            </div>

            <div class="form-group">
                {{ form_label(form.difficulte) }}
                {{ form_widget(form.difficulte) }}
            </div>

            <div class="form-group">
                {{ form_label(form.date_limite) }}
                {{ form_widget(form.date_limite) }}
            </div>

            <div class="file-upload">
                <label for="project_fichier_pdf">Upload a PDF file</label>
                {{ form_widget(form.fichier_pdf) }}
            </div>

            <button type="submit" class="btn btn-primary">Save</button>
        {{ form_end(form) }}
    </div>
{% endblock %}
