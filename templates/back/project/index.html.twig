{% extends 'base.html.twig' %}

{% block title %}Project index{% endblock %}

{% block body %}
    <h1>Project index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Title</th>
                <th>Description</th>
                <th>Creation Date</th>
                <th>PDF</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for project in projects %}
            <tr>
                <td>{{ project.id }}</td>
                <td>{{ project.titre }}</td>
                <td>{{ project.getDescriptionProject() }}</td>  
                <td>{{ project.getDateCreationProject|date("Y-m-d") }}</td>
                <td>
                    {% if project.getFichierPdf %}
                        <a href="{{ asset('uploads/' ~ project.getFichierPdf()) }}" target="_blank">View PDF</a>
                    {% else %}
                        No PDF
                    {% endif %}
                </td>
                <td>
                    <!-- Edit button -->
                    <a href="{{ path('app_project_edit', {'id': project.id}) }}" class="btn btn-primary">Edit</a>
                    
                    <!-- Delete form -->
                    <form action="{{ path('app_project_delete', {'id': project.id}) }}" method="POST" style="display: inline;">
                        <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ project.id) }}">
                        <button type="submit" class="btn btn-danger" onclick="return confirm('Are you sure you want to delete this project?')">Delete</button>
                    </form>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <!-- Delete all projects -->
    <form action="{{ path('app_project_delete_all') }}" method="POST" style="display: inline;">
        <input type="hidden" name="_token" value="{{ csrf_token('delete_all') }}">
        <button type="submit" class="btn btn-danger" onclick="return confirm('Are you sure you want to delete all projects?')">Clear All</button>
    </form>

    <!-- Link to create a new project -->
    <a href="{{ path('app_project_add') }}" class="btn btn-success">Create New Project</a>
{% endblock %}
