{% extends 'base.html.twig' %}

{% block title %}Groupe Index{% endblock %}

{% block body %}
    <div class="container mt-4">
        <h1 class="mb-4">Groupe List</h1>

        {% for message in app.flashes('success') %}
            <div class="alert alert-success">{{ message }}</div>
        {% endfor %}

        {% for message in app.flashes('warning') %}
            <div class="alert alert-warning">{{ message }}</div>
        {% endfor %}

        <table class="table table-striped">
            <thead class="table-dark">
                <tr>
                    <th>ID</th>
                    <th>Number of Members</th>
                    <th>Description</th>
                    <th>Groupe Name</th>
                    <th>Members</th>
                    <th>Creation Date</th>
                    <th>Image</th>
                    <th>Meeting Date</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
            {% for groupe in groupes %}
                <tr>
                    <td>{{ groupe.id }}</td>
                    <td>{{ groupe.nbrMembers }}</td>
                    <td>{{ groupe.descriptionGroup|default('No description') }}</td>
                    <td>{{ groupe.nomGroup }}</td>
                    <td>
                        <span class="badge {% if groupe.members == 'public' %}bg-success{% else %}bg-secondary{% endif %}">
                            {{ groupe.members }}
                        </span>
                    </td>
                    <td>{{ groupe.dateCreationGroup ? groupe.dateCreationGroup|date('Y-m-d') : 'N/A' }}</td>
                    <td>
                        {% if groupe.image %}
                            <img src="{{ asset('uploads/' ~ groupe.image) }}" alt="Groupe Image" class="img-thumbnail" width="60">
                        {% else %}
                            No Image
                        {% endif %}
                    </td>
                    <td>{{ groupe.dateMeet ? groupe.dateMeet|date('Y-m-d') : 'N/A' }}</td>
                    
                    <td>
                        <a href="{{ path('app_groupe_show', {'id': groupe.id}) }}" class="btn btn-sm btn-info">
                            <i class="bi bi-eye"></i> View
                        </a>
                        <a href="{{ path('app_groupe_edit', {'id': groupe.id}) }}" class="btn btn-sm btn-warning">
                            <i class="bi bi-pencil"></i> Edit
                        </a>
                        <form action="{{ path('app_groupe_delete', {'id': groupe.id}) }}" method="POST" style="display: inline;">
                            <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ groupe.id) }}">
                            <button type="submit" class="btn btn-sm btn-danger" onclick="return confirm('Are you sure you want to delete this groupe?')">
                                <i class="bi bi-trash"></i> Delete
                            </button>
                        </form>
                    </td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="10" class="text-center">No records found</td>
                </tr>
            {% endfor %}
            </tbody>
        </table>

        <div class="d-flex gap-2">
            <a href="{{ path('app_groupe_new') }}" class="btn btn-primary">
                <i class="bi bi-plus-circle"></i> Create New Groupe
            </a>

            <form action="{{ path('app_groupe_delete_all') }}" method="POST" style="display: inline;">
                <button type="submit" class="btn btn-danger" onclick="return confirm('Are you sure you want to delete all groupes?')">
                    <i class="bi bi-trash"></i> Clear
                </button>
            </form>
        </div>
    </div>
{% endblock %}
