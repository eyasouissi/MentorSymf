<form action="{{ path('app_group_delete_all') }}" method="POST" onsubmit="return confirm('Are you sure to delete all groups ?');">
    <div class="form-group">
        <input type="hidden" name="_token" value="{{ csrf_token('delete_all_groups') }}">
        <button type="submit" class="btn btn-danger">
            🗑️ All groups are deleted!
        </button>
    </div>
</form>
