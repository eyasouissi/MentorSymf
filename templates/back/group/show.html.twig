{% extends 'back/baseback.html.twig' %}

{% block title %}Group{% endblock %}

{% block body %}
    <div class="container mt-4">
        <h1>Group Details</h1>

        <table class="table table-bordered table-striped">
            <tbody>
                <tr>
                    <th>Id</th>
                    <td>{{ groupStudent.id }}</td>
                </tr>
                <tr>
                    <th>Number of Members</th>
                    <td>{{ groupStudent.nbrMembers }}</td>
                </tr>
                <tr>
                    <th>Description</th>
                    <td>{{ groupStudent.descriptionGroup }}</td>
                </tr>
                <tr>
                    <th>Group Name</th>
                    <td>{{ groupStudent.nomGroup }}</td>
                </tr>
                <tr>
                    <th>Members</th>
                    <td>{{ groupStudent.members }}</td>
                </tr>
                <tr>
                    <th>Creation Date</th>
                    <td>{{ groupStudent.dateCreationGroup ? groupStudent.dateCreationGroup|date('Y-m-d') : 'N/A' }}</td>
                </tr>
                <tr>
                    <th>Image</th>
                    <td>
                        {% if groupStudent.image %}
                            <img src="{{ asset('uploads/groupPics/' ~ groupStudent.image) }}" alt="Group Image" class="img-thumbnail" width="100">
                        {% else %}
                            No Image Available
                        {% endif %}
                    </td>
                </tr>
                <tr>
                    <th>Meeting Date</th>
                    <td>{{ groupStudent.dateMeet ? groupStudent.dateMeet|date('Y-m-d') : 'N/A' }}</td>
                </tr>
            </tbody>
        </table>

        <div class="d-flex gap-2">
            <a href="{{ path('app_group_index') }}" class="btn btn-secondary">
                <i class="bi bi-arrow-left-circle"></i> Back to List
            </a>

            <a href="{{ path('app_group_edit', {'id': groupStudent.id}) }}" class="btn btn-warning">
                <i class="bi bi-pencil"></i> Edit
            </a>

            {{ include('group/_delete_form.html.twig') }}
        </div>
    </div>
{% endblock %}
