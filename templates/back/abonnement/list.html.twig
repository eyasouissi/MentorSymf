{% extends 'back/baseback.html.twig' %}

{% block title %}Abonnement{% endblock %}

{% block body %}
<div class="container mt-4">

    <div class="az-content az-content-dashboard">
        <div class="container">
            <div class="az-content-body">

                <!-- Navigation Tabs -->
                <div class="az-dashboard-nav">
                    <nav class="nav">
                        <a href="{{ path('app_list_abonnement') }}" class="nav-link {% if app.request.attributes.get('_route') == 'app_list_abonnement' %}active{% endif %}">List</a>
                        
                        <a href="{{ path('paiements_statistiques') }}"nav-link">charts</a>

                    </nav>
                    <nav class="nav">
                        <a href="{{ path('export_paiements_pdf') }}" class="btn btn-primary">
                            <i class="far fa-file-pdf"></i> Export to PDF
                        </a>
                    </nav>
                </div>

                <h2>List of Payments</h2>

                <!-- Search Input -->
                <input type="text" id="searchInput" class="form-control mb-3" placeholder="Search by email" value="{{ search }}">

                <!-- Sorting Dropdown -->
                <select id="sortSelect" class="form-control mb-3">
                    <option value="asc" {% if sort == 'asc' %}selected{% endif %}>Sort by Date (Asc)</option>
                    <option value="desc" {% if sort == 'desc' %}selected{% endif %}>Sort by Date (Desc)</option>
                </select>

                <div class="table-container">
                    <table class="table">
                        <thead>
                            <tr>
                                <th>Email</th>
                                <th>Offer</th>
                                <th>Date de Paiement</th>
                                <th>Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            {% for paiement in paiements %}
                                <tr>
                                    <td>{{ paiement.user.email }}</td>
                                    <td>{{ paiement.offre.nomOffre }}</td>
                                    <td>{{ paiement.datePaiement|date('Y-m-d H:i') }}</td>
                                    <td>
                                        <a href="{{ path('app_edit_abonnement', {'id': paiement.id}) }}" class="btn btn-warning">Edit</a> 
                                        <a href="{{ path('app_delete_abonnement', {'id': paiement.id}) }}" class="btn btn-danger" onclick="return confirm('Are you sure?')">Delete</a> 
                                    </td>
                                </tr>
                            {% else %}
                                <tr>
                                    <td colspan="4">No payments found.</td>
                                </tr>
                            {% endfor %}
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>

</div>

<script>
document.addEventListener("DOMContentLoaded", function () {
    let searchInput = document.getElementById("searchInput");
    let sortSelect = document.getElementById("sortSelect");

    function updateTable() {
        let searchQuery = searchInput.value.trim();
        let sortOption = sortSelect.value;

        window.location.href = `{{ path('app_list_abonnement') }}?search=${encodeURIComponent(searchQuery)}&sort=${sortOption}`;
    }

    searchInput.addEventListener("input", updateTable);
    sortSelect.addEventListener("change", updateTable);
});
</script>

{% endblock %}
