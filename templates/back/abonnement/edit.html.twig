{% extends 'back/baseback.html.twig' %}

{% block title %}Edit Payment{% endblock %}

{% block body %}
<div class="container mt-4">

    <div class="az-content az-content-dashboard">
        <div class="container">
            <div class="az-content-body">
                <!-- Dashboard Title -->
                <div class="az-dashboard-one-title">
                    <div>
                        <h2 class="az-dashboard-title">Hi, welcome back!</h2>
                        <p class="az-dashboard-text">Your web analytics dashboard template.</p>
                    </div>
                </div>

                <!-- Navigation Tabs -->
                <div class="az-dashboard-nav">
                    <nav class="nav">
                        <a href="{{ path('app_list_abonnement') }}" class="nav-link {% if app.request.attributes.get('_route') == 'app_list_abonnement' %}active{% endif %}">List</a>
                        <a class="nav-link" data-toggle="tab" href="#">Charts</a>
                    </nav>
                </div>
                    <h2>Edit Payment</h2>

<br></br>
<div class="container mt-4">
<br></br>

    <form method="POST">
        <div class="form-group">
            <label for="datePaiement">Payment Date</label>
            <input type="text" name="datePaiement" id="datePaiement" class="form-control" value="{{ paiement.datePaiement|date('Y-m-d H:i') }}">
        </div>

        <!-- You can add more fields to edit if necessary -->

        <button type="submit" class="btn btn-primary">Save Changes</button>
        <a href="{{ path('app_list_abonnement') }}" class="btn btn-secondary">Cancel</a>
    </form>
</div>
{% endblock %}
