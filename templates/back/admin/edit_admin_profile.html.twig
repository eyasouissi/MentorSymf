{% extends 'back/baseback.html.twig' %}

{% block body %}
    <div class="container d-flex justify-content-center align-items-center" style="min-height: 80vh;">
        <div class="card p-4" style="width: 100%; max-width: 600px;">
            <h1 class="text-center mb-4">Edit Admin Profile</h1>

            <form method="post" enctype="multipart/form-data">
                {{ form_start(form) }}
                
                <div class="form-group mb-3">
                    {{ form_label(form.name) }}
                    {{ form_widget(form.name, {'attr': {'class': 'form-control'}}) }}
                </div>

                <div class="form-group mb-3">
                    {{ form_label(form.email) }}
                    {{ form_widget(form.email, {'attr': {'class': 'form-control'}}) }}
                </div>

                <div class="form-group mb-3">
                    {{ form_label(form.bio) }}
                    {{ form_widget(form.bio, {'attr': {'class': 'form-control'}}) }}
                </div>

                <div class="form-group mb-3">
                    {{ form_label(form.age) }}
                    {{ form_widget(form.age, {'attr': {'class': 'form-control'}}) }}
                </div>

                <div class="form-group mb-3">
                    {{ form_label(form.country) }}
                    {{ form_widget(form.country, {'attr': {'class': 'form-control'}}) }}
                </div>
                
                  {% if form.speciality is defined %}
                    <div class="form-group mb-3">
                        {{ form_label(form.speciality) }}
                        {{ form_widget(form.speciality, {'attr': {'class': 'form-control'}}) }}
                    </div>
                {% endif %}  
                
                <div class="form-group mb-3">
                    {{ form_label(form.pfp) }}
                    {{ form_widget(form.pfp, {'attr': {'class': 'form-control'}}) }}
                </div>

                <div class="form-group mb-3">
                    {{ form_label(form.bg) }}
                    {{ form_widget(form.bg, {'attr': {'class': 'form-control'}}) }}
                </div>

              

                {% if form.diplome is defined %}
                    <div class="form-group mb-3">
                        {{ form_label(form.diplome) }}
                        {{ form_widget(form.diplome, {'attr': {'class': 'form-control'}}) }}
                    </div>
                {% endif %}

                <div class="form-group text-center">
                    <button class="btn btn-primary" type="submit">Save Changes</button>
                </div>

                {{ form_end(form) }}
            </form>
        </div>
    </div>
{% endblock %}