{% extends 'front/base.html.twig' %}

{% block title %}Modifier le Niveau - {{ level.name }}{% endblock %}

{% block body %}
<div class="container py-5">
    <h1 class="text-center mb-4">Modifier le Niveau : {{ level.name }}</h1>

    {{ form_start(form) }}

    <div class="mb-4">
        <label for="level_name" class="form-label">Nom du Niveau</label>
        {{ form_widget(form.name, { 'attr': {'class': 'form-control'} }) }}
        {{ form_errors(form.name) }}
    </div>

    <div class="d-flex justify-content-center">
        <button type="submit" class="btn btn-success">Enregistrer</button>
        <a href="{{ path('course_details', {'id': level.course.id}) }}" class="btn btn-secondary ms-3">Annuler</a>
    </div>

    {{ form_end(form) }}
</div>
{% endblock %}
