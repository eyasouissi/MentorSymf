{% extends 'front/base.html.twig' %}

{% block title %}{{ group.nomGroup }}{% endblock %}



{% block body %}
    {# Group Header Section #}
    <div class="group-header">
        <div class="group-info-container">
            <div class="group-image-wrapper">
                <img src="{{ group.image ? asset('uploads/groupPics/' ~ group.image) : asset('assets/img/defaultgroup.jpg') }}" 
     alt="{{ group.nomGroup }}"
     class="group-image">
                {% if is_granted('ROLE_TUTOR') %}
                    <a href="{{ path('app_group_edit', {'id': group.id}) }}" class="edit-group-btn">
                        <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="#8c84a1">
                            <path d="M3 17.25V21h3.75L17.81 9.94l-3.75-3.75L3 17.25zM20.71 7.04c.39-.39.39-1.02 0-1.41l-2.34-2.34c-.39-.39-1.02-.39-1.41 0l-1.83 1.83 3.75 3.75 1.83-1.83z"/>
                        </svg>
                    </a>
                {% endif %}
            </div>
            <div class="group-details">
    <h1 class="group-name">{{ group.nomGroup }}</h1>
    <p class="members-count">{{ group.nbrMembers }} Members</p>
    
    <div class="member-avatars-container">
        <div class="member-bubbles">
            {% for member in group.members|slice(0, 5) %}
                <img src="{{ asset('uploads/pfp/' ~ member.pfp) }}" 
                     alt="{{ member.name }}" 
                     class="member-bubble"
                     title="{{ member.name }}">
            {% endfor %}
            
            {% if group.members|length > 5 %}
                <div class="more-members-bubble" 
                     data-count="{{ group.members|length - 5 }}"
                     onmouseover="showMembersDropdown(this)"
                     onmouseout="hideMembersDropdown(this)">
                    +{{ group.members|length - 5 }}
                    
                    <div class="members-dropdown">
                        {% for member in group.members|slice(5) %}
                            <div class="dropdown-member">
                                <img src="{{ asset('uploads/pfp/' ~ member.pfp) }}" 
                                     alt="{{ member.name }}"
                                     class="member-bubble">
                                <span class="member-name">{{ member.name }}</span>
                            </div>
                        {% endfor %}
                    </div>
                </div>
            {% endif %}
        </div>
    </div>

    <div class="group-description">
        {{ group.descriptionGroup|raw }}
    </div>
</div>
        </div>
    </div>

    {# Main Content #}
    <div class="group-content-wrapper">
       <div class="container mt-5">
        <div class="calendar-buttons">
            <a href="{{ path('groupfront_index') }}" class="btn">
                üìÖ Deadlines Calendar
            </a>
            <a href="{{ path('group_meet_calendar') }}" class="btn">
                üóìÔ∏è Meeting Calendar
            </a>
        </div>
    </div>

        {# Projects Sidebar #}
        <div class="projects-sidebar">
            <h3>Group Projects ({{ group.projects|length }})</h3>
            {% if group.projects is empty %}
                <div class="alert alert-info">No projects created yet</div>
            {% else %}
                {% for project in group.projects %}
                    <a href="{{ path('project_show', {'id': project.id}) }}" class="project-item">
                        <h5>{{ project.titre }}</h5>
                        <p class="text-muted">{{ project.descriptionProject|slice(0, 80) }}...</p>
                        <div class="project-meta">
                            <span class="badge bg-primary">{{ project.difficulte }}</span>
                            <small class="text-muted">Due: {{ project.dateLimite|date('M d') }}</small>
                        </div>
                    </a>
                {% endfor %}
            {% endif %}
        </div>
    </div>
{%block javascript%}
<script>
function showMembersDropdown(element) {
    const dropdown = element.querySelector('.members-dropdown');
    dropdown.style.display = 'flex';
}

function hideMembersDropdown(element) {
    const dropdown = element.querySelector('.members-dropdown');
    dropdown.style.display = 'none';
}

// Optional: Touch device support
document.querySelectorAll('.more-members-bubble').forEach(bubble => {
    bubble.addEventListener('click', (e) => {
        if ('ontouchstart' in window) {
            const dropdown = bubble.querySelector('.members-dropdown');
            dropdown.style.display = dropdown.style.display === 'flex' ? 'none' : 'flex';
        }
    });
});
</script>
{%endblock%}
