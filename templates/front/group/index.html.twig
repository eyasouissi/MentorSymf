{% extends 'front/base.html.twig' %}

{% block title %}Groups{% endblock %}

{% block body %}
    <section class="categories-hero position-relative d-flex align-items-center">
        <div class="container text-center">
            <div class="row justify-content-center">
                <div class="col-lg-8">
                    <h1 class="text-white fw-bold animate__animated animate__fadeInDown">Groups üéì</h1>
                    <p class="text-light fs-5 animate__animated animate__fadeInUp">Join different groups and work on projects!</p>
                </div>
            </div>
        </div>
    </section>

