        <div class="container">
    <a class="navbar-brand" href="#">Available Groups</a>
    <div class="navbar-nav ml-auto">
        {% if is_granted('ROLE_TUTOR') %}
            <a href="{{ path('app_group_new') }}" class="nav-link">
                <i class="fas fa-plus"></i> Create Group
            </a>
        {% endif %}
        <a class="nav-link" href="{{ path('app_project_front') }}">Projects üìù</a>
    </div>
</div>

    </nav>

    <div class="container mt-5">
        
        <div class="view-toggle">
            <button id="list-view-btn" class="btn">
                üìã List View
            </button>
            <button id="kanban-view-btn" class="btn">
                üóÇÔ∏è Kanban View
            </button>
        </div>

        {% if is_granted('ROLE_ADMIN') %}
            <div class="alert alert-info" role="alert">
                You are viewing all groups as an administrator.
            </div>
        {% elseif is_granted('ROLE_TUTOR') %}
            <div class="alert alert-info" role="alert">
                You are viewing groups you manage.
            </div>
        {% endif %}

        {% if groups is empty %}
            <div class="alert alert-warning" role="alert">
                {% if is_granted('ROLE_STUDENT') %}
                    You are not a member of any group at the moment.
                {% else %}
                    No groups found.
                {% endif %}
            </div>
        {% endif %}

        <!-- Kanban View -->
        <div id="kanban-view" class="kanban-view">
            {% for group in groups %}
                <div class="kanban-card position-relative">
                    {% if is_granted('ROLE_TUTOR') and group.createdBy == app.user %}
                        <a href="{{ path('app_group_show', {'id': group.id}) }}" class="group-link"></a>
                    {% endif %}

                    <img src="{{ group.image ? asset('uploads/groupPics/' ~ group.image) : asset('images/default-group.jpg') }}" 
                         alt="{{ group.nomGroup }}"
                         class="group-image">
                    <div class="creator-info">
                        <small class="text-muted">Created by:</small>
                        <div class="d-flex align-items-center justify-content-center mt-1">
                            <img src="{{ asset('uploads/pfp/' ~ group.createdBy.pfp) }}" 
                                 alt="{{ group.createdBy.name }}"
                                 class="creator-pic rounded-circle me-2">
                            <span class="creator-name">{{ group.createdBy.name }}</span>
                        </div>
                    </div>
                    <h3>{{ group.nomGroup }}</h3>
                    <div class="group-details">
                        <p>{{ group.descriptionGroup|striptags|slice(0, 100) }}...</p>
                        <div class="group-stats">
                            <div><i class="fas fa-users"></i> {{ group.nbrMembers }} Members</div>
                            <div><i class="fas fa-calendar-day"></i> {{ group.dateCreationGroup|date('d M Y') }}</div>
                            {% if group.dateMeet %}
                            <div><i class="fas fa-clock"></i> {{ group.dateMeet|date('d M Y H:i') }}</div>
                            {% endif %}
                        </div>
                        {% if is_granted('ROLE_STUDENT') %}
                            {% if group not in app.user.groups %}
                                <div class="join-button-container mt-3">
                                    <button class="btn btn-join w-100" data-group-id="{{ group.id }}">
                                        <i class="fas fa-plus"></i> Join Group
                                    </button>
                                </div>
                            {% else %}
                                <a href="{{ path('app_group_show', {'id': group.id}) }}" class="btn btn-success w-100 mt-3">
                                    <i class="fas fa-door-open"></i> Enter Group
                                </a>
                            {% endif %}
                        {% endif %}
                    </div>
                </div>
            {% endfor %}
        </div>

        <!-- List View -->
        <div id="group-view" class="list-view" style="display: none;">
            {% for group in groups %}
                <div class="list-group-item position-relative">
                    {% if is_granted('ROLE_TUTOR') and group.createdBy == app.user %}
                        <a href="{{ path('app_group_show', {'id': group.id}) }}" class="group-link"></a>
                    {% endif %}

                    <div class="d-flex align-items-start">
                        <img src="{{ group.image ? asset('uploads/groupPics/' ~ group.image) : asset('images/default-group.jpg') }}" 
                             class="group-image me-3"
                             alt="{{ group.nomGroup }}">
                        <div class="flex-grow-1">
                            <div class="creator-info mb-2">
                                <div class="d-flex align-items-center">
                                    <img src="{{ asset('uploads/pfp/' ~ group.createdBy.pfp) }}" 
                                         alt="{{ group.createdBy.name }}"
                                         class="creator-pic rounded-circle me-2">
                                    <small class="text-muted">Created by {{ group.createdBy.name }}</small>
                                </div>
                            </div>
                            <h3 class="h5 mb-1">{{ group.nomGroup }}</h3>
                            <p class="text-muted mb-2">{{ group.descriptionGroup|striptags|slice(0, 150) }}...</p>
                            <div class="group-stats d-flex gap-3 text-muted small">
                                <div><i class="fas fa-users me-1"></i>{{ group.nbrMembers }} Members</div>
                                <div><i class="fas fa-calendar-alt me-1"></i>{{ group.dateCreationGroup|date('d M Y') }}</div>
                                {% if group.dateMeet %}
                                <div><i class="fas fa-clock me-1"></i>{{ group.dateMeet|date('d M Y H:i') }}</div>
                                {% endif %}
                            </div>
                            {% if is_granted('ROLE_STUDENT') %}
                                {% if group not in app.user.groups %}
                                    <div class="join-button-container mt-3">
                                        <button class="btn btn-join w-100" data-group-id="{{ group.id }}">
    <i class="fas fa-plus"></i> Join Group
</button>
                                    </div>
                                {% else %}
                                    <a href="{{ path('app_group_show', {'id': group.id}) }}" class="btn btn-success w-100 mt-3">
                                        <i class="fas fa-door-open"></i> Enter Group
                                    </a>
                                {% endif %}
                            {% endif %}
                        </div>
                    </div>
                </div>
            {% endfor %}
        </div>
    </div>

    <script>
        // View toggle script
        const listViewBtn = document.getElementById('list-view-btn');
        const kanbanViewBtn = document.getElementById('kanban-view-btn');
        const listView = document.getElementById('group-view');
        const kanbanView = document.getElementById('kanban-view');

        listViewBtn.addEventListener('click', () => {
            listView.style.display = 'block';
            kanbanView.style.display = 'none';
        });

        kanbanViewBtn.addEventListener('click', () => {
            listView.style.display = 'none';
            kanbanView.style.display = 'flex';
        });

    document.querySelectorAll('.btn-join').forEach(button => {
    button.addEventListener('click', async (e) => {
        e.stopPropagation();
        const groupId = e.currentTarget.dataset.groupId;
        const button = e.currentTarget;
        
        try {
            button.innerHTML = `<i class="fas fa-spinner fa-spin"></i> Joining...`;
            button.disabled = true;

            // Use FormData to send the CSRF token
            const formData = new FormData();
            formData.append('_csrf_token', '{{ csrf_token('join-group') }}');

            const response = await fetch(`/group/${groupId}/join`, {
                method: 'POST',
                headers: {
                    'X-Requested-With': 'XMLHttpRequest'
                },
                body: formData
            });

            if (response.ok) {
                window.location.href = `/group/${groupId}`;
            } else {
                const error = await response.json();
                throw new Error(error.message || 'Failed to join group');
            }
        } catch (error) {
            console.error('Error:', error);
            button.innerHTML = `<i class="fas fa-times"></i> Error`;
            button.disabled = false;
            setTimeout(() => {
                button.innerHTML = `<i class="fas fa-plus"></i> Join Group`;
            }, 2000);
        }
    });
});
    </script>

