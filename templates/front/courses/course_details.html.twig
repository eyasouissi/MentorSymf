{% extends 'front/base.html.twig' %}

{% block title %}{{ course.title }} - DÃ©tails{% endblock %}

{% block body %}
<main class="container mt-5">
    <h1 class="text-center mb-4">{{ course.title }}</h1>
    
    <div class="course-description mb-5">
        <h4>Description du Cours :</h4>
        <p class="lead">{{ course.description|raw }}</p>
    </div>

    {# Bouton pour ajouter un niveau #}
    <a href="{{ path('add_level', {'id': course.id}) }}" class="btn btn-success mb-3">
        Ajouter un Niveau
    </a>

    <h2 class="mt-4">Niveaux</h2>
    <div class="row">
        {% for level in course.levels %}
            <div class="col-md-4">
                <div class="card mb-3 shadow-sm">
                    <div class="card-body">
                        <h5 class="card-title text-primary">{{ level.name }}</h5>
                        <p class="card-text">Contenu du niveau Ã  venir...<br><small class="text-muted">Ã€ complÃ©ter par l'instructeur</small></p>

                        <div class="d-flex justify-content-between align-items-center">
                            <div>
                                <!-- Bouton Modifier -->
                                <a href="{{ path('edit_level', {'id': level.id}) }}" class="btn btn-warning btn-sm">
                                    <i class="bi bi-pencil-square"></i>
                                </a>

                                <!-- Bouton Supprimer -->
                                <form action="{{ path('delete_level', {'id': level.id}) }}" method="post" style="display:inline;" onsubmit="return confirm('Voulez-vous vraiment supprimer ce niveau ?');">
                                    <input type="hidden" name="_method" value="DELETE">
                                    <button type="submit" class="btn btn-danger btn-sm">
                                        <i class="bi bi-trash"></i>
                                    </button>
                                </form>
                            </div>
                        </div>

                        <h6 class="mt-3">Fichiers :</h6>
                        {% if level.files is not empty %}
                            <ul class="list-unstyled">
                                {% for file in level.files %}
                                    <li>
                                        <i class="bi bi-file-earmark-text"></i>
                                        <a href="{{ asset('uploads/images/' ~ file.fileName) }}" target="_blank">
                                            {{ file.fileName }}
                                        </a>
                                    </li>
                                {% endfor %}
                            </ul>
                        {% else %}
                            <p>Aucun fichier disponible pour ce niveau.</p>
                        {% endif %}

                        {# Bouton Upload ðŸ“‚ #}
                        <button class="btn btn-primary mt-3" data-bs-toggle="modal" data-bs-target="#uploadModal{{ level.id }}">
                            <i class="bi bi-folder-plus"></i> Upload Fichiers
                        </button>
                    </div>
                </div>
            </div>
        {% else %}
            <p class="text-center col-12">Aucun niveau ajoutÃ© pour ce cours.</p>
        {% endfor %}
    </div>
</main>

{# Modals pour l'upload des fichiers #}
{% for level in course.levels %}
    <div class="modal fade" id="uploadModal{{ level.id }}" tabindex="-1" aria-labelledby="uploadModalLabel{{ level.id }}" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="uploadModalLabel{{ level.id }}">Uploader un fichier pour {{ level.name }}</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <form action="{{ path('upload_file', {'id': level.id}) }}" method="post" enctype="multipart/form-data" class="upload-form">
                        <div class="mb-3">
                            <label for="fileInput{{ level.id }}" class="form-label">SÃ©lectionner un fichier (PDF, DOCX, PPTX, TXT)</label>
                            <input type="file" name="file" id="fileInput{{ level.id }}" class="form-control" accept=".pdf, .docx, .pptx, .txt" required>
                        </div>
                        <div class="d-flex justify-content-end">
                            <button type="submit" class="btn btn-success">
                                <i class="bi bi-cloud-upload"></i> Envoyer
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
{% endfor %}

{# Script de validation pour vÃ©rifier la taille du fichier (max 5 Mo) #}
<script>
document.addEventListener("DOMContentLoaded", function() {
    document.querySelectorAll(".upload-form").forEach(function(form) {
        form.addEventListener("submit", function(event) {
            let fileInput = form.querySelector("input[type='file']");
            if (fileInput.files.length > 0) {
                let fileSize = fileInput.files[0].size;
                let maxSize = 5 * 1024 * 1024; // 5 Mo

                if (fileSize > maxSize) {
                    alert("Le fichier est trop volumineux. Taille maximale : 5 Mo.");
                    event.preventDefault();
                }
            }
        });
    });
});
</script>

{% endblock %}
