{% extends 'front/base.html.twig' %}

{% block title %}Nos Offres{% endblock %}

{% block body %}
<main class="main">

    <!-- Page Title -->
    <div class="page-title" data-aos="fade">
        <div class="heading">
            <div class="container">
                <div class="row d-flex justify-content-center text-center">
                    <div class="col-lg-8">
                        <h1>Our Offers</h1>
                        <h2 class="mb-0">Choose the subscription that fits your needs  and enjoy our exclusive services</h2>
                    </div>
                </div>
            </div>
        </div>
        <nav class="breadcrumbs">
            <div class="container">
                <ol>
                    <li><a href="{{ path('app_index') }}">Accueil</a></li>
                    <li class="current">Offres</li>
                </ol>
            </div>
        </nav>
    </div><!-- End Page Title -->

    <!-- Pricing Section -->
    <section id="pricing" class="pricing section">
        <div class="container">
            <div class="row gy-3">

                {% for o in offres %}
                <div class="col-xl-3 col-lg-6" data-aos="fade-up" data-aos-delay="{{ loop.index * 100 }}">
                    <div class="pricing-item {% if loop.first %}featured{% endif %}">
                        <h3>{{ o.getNomOffre() }}</h3>
                        <h4><sup>$</sup>{{ o.getPrix() }}<span> / mois</span></h4>

                        <!-- Affichage de l'image -->
                        {% if o.imageOffre %}
                        <img src="{{ asset('uploads/' ~ o.getImageOffre()) }}" alt="Image de {{ o.getNomOffre() }}" style="width: 100%; height: auto; border-radius: 10px;">
                        {% else %}
                        <p>Aucune image disponible</p>
                        {% endif %}

                        <ul>
                            <li><strong>Description :</strong> {{ o.getDescription() }}</li>
                            <li><strong>Date de d√©but :</strong> {{ o.getDateDebut()|date('d-m-Y') }}</li>
                            <li><strong>Date de fin :</strong> {{ o.getDateFin()|date('d-m-Y') }}</li>
                        </ul>

                        <div class="btn-wrap">
                            <a href="{{ path('app_abonnement') }}" class="btn-buy">S'abonner</a>
                        </div>
                    </div>
                </div><!-- End Pricing Item -->
                {% endfor %}

            </div>

           
        </div>
    </section><!-- /Pricing Section -->

</main>
{% endblock %}
