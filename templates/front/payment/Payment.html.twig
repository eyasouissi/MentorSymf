{% extends 'front/base.html.twig' %}

{% block title %}Nos Offres{% endblock %}

{% block body %}
<main class="main">

    <div class="page-title">
    <div class="container">
        <h2 class="text-center">Our Offers</h2> 
    </div>
</div>

    <!-- Pricing Section -->
    <section id="pricing" class="pricing section" style="background-color: #f0f0f0;">
        <div class="container">
            <div class="row gy-3">
                {% for o in offres %}
                <div class="col-xl-3 col-lg-6">
                    <div class="pricing-item" style="background-color: #e0e0e0; border-radius: 10px; box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1); padding: 20px; transition: all 0.3s ease;">
                        <h3>{{ o.getNomOffre() }}</h3>
                        <h4><sup>$</sup>{{ o.getPrix()|number_format(2, ',', ' ') }}<span> / mois</span></h4>

                        <!-- Carousel d'images -->
                        {% if o.getImageOffre() %}
                        <div id="carousel{{ o.getIdOffre() }}" class="carousel slide" data-bs-ride="carousel">
                            <div class="carousel-inner">
                                <div class="carousel-item active">
                                    <img src="{{ asset('uploads/' ~ o.getImageOffre()) }}" class="d-block w-100" alt="Image de {{ o.getNomOffre() }}">
                                </div>
                            </div>
                            <button class="carousel-control-prev" type="button" data-bs-target="#carousel{{ o.getIdOffre() }}" data-bs-slide="prev">
                                <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                            </button>
                            <button class="carousel-control-next" type="button" data-bs-target="#carousel{{ o.getIdOffre() }}" data-bs-slide="next">
                                <span class="carousel-control-next-icon" aria-hidden="true"></span>
                            </button>
                        </div>
                        {% else %}
                        <p>Aucune image disponible</p>
                        {% endif %}

                        <ul>
                            <li><strong>Description :</strong> {{ o.getDescription() }}</li>
                            <li><strong>Date de début :</strong> {{ o.getDateDebut()|date('d-m-Y') }}</li>
                            <li><strong>Date de fin :</strong> {{ o.getDateFin()|date('d-m-Y') }}</li>
                        </ul>

                        <div class="btn-wrap">
                            <button class="btn-buy checkout-button" data-id="{{ o.getIdOffre() }}">Subscribe</button>
                        </div>
                    </div>
                </div><!-- End Pricing Item -->
                {% endfor %}
            </div>
        </div>
    </section><!-- /Pricing Section -->

</main>

<!-- Ajout des scripts nécessaires pour SweetAlert2 et Stripe -->
<script src="https://js.stripe.com/v3/"></script>
<script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>

<script>
    document.addEventListener("DOMContentLoaded", function () {
        const stripe = Stripe("{{ stripe_public_key }}");

        document.querySelectorAll(".checkout-button").forEach(button => {
            button.addEventListener("click", async () => {
                const offreId = button.getAttribute("data-id");

                try {
                    // Affichage de la notification de chargement
                    Swal.fire({
                        title: 'Paiement en cours...',
                        text: 'Veuillez patienter pendant le traitement de votre paiement.',
                        icon: 'info',
                        showConfirmButton: false,
                        allowOutsideClick: false,
                        willOpen: () => {
                            Swal.showLoading();
                        }
                    });

                    // Création de la session Stripe
                    const response = await fetch(`/stripe/create-session/${offreId}`, {
                        method: "GET",
                        headers: { "Content-Type": "application/json" }
                    });

                    if (!response.ok) {
                        throw new Error("Erreur lors de la création de la session Stripe");
                    }

                    const { id } = await response.json();

                    // Redirection vers Stripe Checkout
                    const { error } = await stripe.redirectToCheckout({ sessionId: id });

                    if (error) {
                        console.error("Erreur Stripe:", error);
                        Swal.fire('Erreur', 'Une erreur est survenue lors du paiement.', 'error');
                    }
                } catch (error) {
                    console.error("Erreur:", error);
                    Swal.fire('Erreur', 'Impossible de lancer le paiement.', 'error');
                }
            });
        });
    });
</script>

<!-- Custom CSS -->
<style>
    .pricing-item {
        background-color: #f8f8f8;
        border-radius: 10px;
        box-shadow: 0 10px 20px rgba(0, 0, 0, 0.1);
        padding: 20px;
        transition: all 0.3s ease;
    }

    .pricing-item:hover {
        transform: translateY(-10px);
        box-shadow: 0 15px 25px rgba(0, 0, 0, 0.2);
    }

    .btn-buy {
        background-color: #28a745;
        color: white;
        border: none;
        padding: 10px 20px;
        font-size: 16px;
        border-radius: 5px;
        cursor: pointer;
        transition: background-color 0.3s ease;
    }

    .btn-buy:hover {
        background-color: #218838;
    }

    .carousel-inner img {
        object-fit: cover;
        height: 250px;
        border-radius: 8px;
    }

    .pricing h3, .pricing h4 {
        color: #333;
    }

    .pricing ul {
        list-style-type: none;
        padding: 0;
        margin: 0;
    }

    .pricing ul li {
        margin-bottom: 10px;
    }

    /* Responsive Styles */
    @media (max-width: 768px) {
        .pricing-item {
            margin-bottom: 20px;
        }

        .btn-buy {
            width: 100%;
        }
    }
</style>

{% endblock %}
