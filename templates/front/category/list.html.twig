{% extends 'front/base.html.twig' %}

{% block title %}Categories{% endblock %}

{% block body %}
<main class="main">

    <!-- Page Title -->
    <div class="page-title" data-aos="fade">
      <div class="heading">
        <div class="container">
          <div class="row d-flex justify-content-center text-center">
            <div class="col-lg-8">
              <h1>Categories</h1>
              <p class="mb-0">Explore different categories of courses available on our platform.</p>
            </div>
          </div>
        </div>
      </div>
    </div><!-- End Page Title -->

    <!-- Categories Section -->
    <section id="categories" class="categories section">
      <div class="container">
        <div class="row">

          {% for category in categories %}
          <div class="col-lg-4 col-md-6 d-flex align-items-stretch" data-aos="zoom-in" data-aos-delay="100">
            <div class="category-container">
              <div class="category-header">
                <h3><a href="{{ path('category_details', {'id': category.id}) }}">{{ category.name }}</a></h3>
              </div>
              <div class="category-body">
                <p class="description">{{ category.description|length > 100 ? category.description|slice(0, 100) ~ '...' : category.description }}</p>
              </div>
              <div class="category-footer">
                <a href="{{ path('category_details', {'id': category.id}) }}" class="btn btn-primary">Voir les cours</a>
              </div>
            </div>
          </div> <!-- End Category Item -->
          {% endfor %}

        </div>
      </div>
    </section><!-- /Categories Section -->

</main>

<style>
  .category-container {
    background-color: #f8f9fa; /* Couleur de fond */
    border: 1px solid #dee2e6; /* Bordure */
    border-radius: 8px; /* Coins arrondis */
    padding: 20px; /* Espacement interne */
    transition: transform 0.3s; /* Animation de transformation */
    display: flex;
    flex-direction: column;
    justify-content: space-between;
  }

  .category-container:hover {
    transform: scale(1.05); /* Zoom effect on hover */
  }

  .category-header h3 {
    font-size: 1.5rem; /* Size of the category title */
    margin-bottom: 10px; /* Space below the title */
  }

  .category-body {
    flex-grow: 1; /* Allow the body to grow */
  }

  .description {
    color: #6c757d; /* Description text color */
    font-size: 1rem; /* Size of the description text */
    margin-bottom: 15px; /* Space below the description */
  }

  .category-footer {
    text-align: right; /* Align button to the right */
  }

  .btn-primary {
    background-color: #007bff; /* Primary button color */
    color: white; /* Button text color */
    border: none; /* Remove border */
    padding: 10px 15px; /* Button padding */
    border-radius: 5px; /* Rounded corners */
    text-decoration: none; /* Remove underline */
  }

  .btn-primary:hover {
    background-color: #0056b3; /* Darker shade on hover */
  }
</style>

{% endblock %}