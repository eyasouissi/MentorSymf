{% extends 'front/base.html.twig' %}

{% block title %}Annonces{% endblock %}

{% block body %}
  <main class="main">

    <!-- Page Title -->
    <div class="page-title" data-aos="fade-up">
      <div class="heading">
        <div class="container">
          <div class="row d-flex justify-content-center text-center">
            <div class="col-lg-8">
              <h1 class="animated-title">All Annonces</h1>
              <p class="mb-0 animated-subtitle">Browse through the latest annonces.</p>
              <!-- Button to add a new annonce -->
              <a href="{{ path('ajouter_annonce') }}" class="btn btn-primary mt-3 btn-add-annonce">
                <i class="fas fa-plus"></i> Add a New Annonce
              </a>
            </div>
          </div>
        </div>
      </div>
      <nav class="breadcrumbs">
        <div class="container">
          <ol>
            <li class="current">Annonces</li>
          </ol>
        </div>
      </nav>
    </div><!-- End Page Title -->

    <!-- Annonces Section -->
    <section class="annonces-section section" data-aos="fade-up">
      <div class="container">
        <div class="row">
          {% for annonce in annonces %}
            <div class="col-lg-4 col-md-6 mb-4">
              <div class="card shadow-lg rounded-lg animated-card">
                <!-- Image Section -->
                <div class="card-image-container">
                  {% if annonce.getImageA %}
                    <img src="{{ asset('uploads/' ~ annonce.getImageA) }}" class="card-img-top" alt="{{ annonce.getTitreA }}">
                  {% else %}
                    <img src="{{ asset('uploads/default-image.jpg') }}" class="card-img-top" alt="Default Image">
                  {% endif %}
                </div>
                <div class="card-body">
                  <h5 class="card-title">{{ annonce.getTitreA }}</h5>
                  <p class="card-text">{{ annonce.getDescriptionA|slice(0, 100) ~ '...' }}</p>
                  
                  <!-- Buttons Section -->
                  <div class="d-flex flex-column gap-2">
                    <a href="{{ path('evenement_index') }}" class="btn btn-primary btn-sm btn-block btn-action">
    <i class="fas fa-eye"></i> Voir la liste des événements
</a>

                    <a href="{{ path('app_annonce_edit', {'id': annonce.id}) }}" class="btn btn-warning btn-sm btn-block btn-action">
                      <i class="fas fa-edit"></i> Edit
                    </a>
                    <form action="{{ path('app_annonce_delete', {'id': annonce.id}) }}" method="POST" class="d-inline">
                      <button type="submit" class="btn btn-danger btn-sm btn-block btn-action">
                        <i class="fas fa-trash"></i> Delete
                      </button>
                    </form>
                  </div>
                </div>
              </div>
            </div>
          {% else %}
            <div class="col-12 text-center">
              <p class="text-muted">No annonces found.</p>
            </div>
          {% endfor %}
        </div>
      </div>
    </section><!-- /Annonces Section -->

  </main>

  <style>
    /* Custom styles for better design */
    .animated-title {
      font-size: 36px;
      font-weight: bold;
      color: #343a40;
      animation: fadeInDown 1.5s ease-in-out;
    }

    .animated-subtitle {
      font-size: 18px;
      color: #6c757d;
      animation: fadeInUp 1.5s ease-in-out;
    }

    /* Card styling */
    .animated-card {
      border: none;
      border-radius: 15px;
      overflow: hidden;
      transition: transform 0.3s ease-in-out, box-shadow 0.3s ease-in-out;
      background: #fff;
    }

    .animated-card:hover {
      transform: translateY(-10px);
      box-shadow: 0 10px 20px rgba(0, 0, 0, 0.2);
    }

    /* Image inside card */
    .card-image-container {
      overflow: hidden;
      height: 200px; /* Fixed height for all images */
      border-radius: 15px 15px 0 0;
    }

    .card-img-top {
      width: 100%;
      height: 100%;
      object-fit: cover; /* Ensures the image covers the area without distortion */
      transition: transform 0.3s ease-in-out;
    }

    .animated-card:hover .card-img-top {
      transform: scale(1.1);
    }

    .card-body {
      padding: 20px;
    }

    .card-title {
      font-size: 20px;
      font-weight: bold;
      color: #007bff;
      margin-bottom: 10px;
    }

    .card-text {
      font-size: 16px;
      color: #555;
      margin-bottom: 20px;
    }

    /* Buttons styling */
    .btn-add-annonce {
      background-color: #28a745;
      border-color: #28a745;
      font-size: 16px;
      padding: 10px 20px;
      border-radius: 10px;
      transition: all 0.3s ease;
    }

    .btn-add-annonce:hover {
      background-color: #218838;
      border-color: #1e7e34;
      transform: translateY(-2px);
      box-shadow: 0 5px 15px rgba(40, 167, 69, 0.4);
    }

    .btn-action {
      font-size: 14px;
      padding: 8px 16px;
      border-radius: 8px;
      transition: all 0.3s ease;
    }

    .btn-action:hover {
      transform: translateY(-2px);
      box-shadow: 0 4px 8px rgba(0, 0, 0, 0.2);
    }

    .btn-primary {
      background-color: #007bff;
      border-color: #007bff;
    }

    .btn-primary:hover {
      background-color: #0056b3;
      border-color: #0056b3;
    }

    .btn-warning {
      background-color: #ffc107;
      border-color: #ffc107;
    }

    .btn-warning:hover {
      background-color: #e0a800;
      border-color: #e0a800;
    }

    .btn-danger {
      background-color: #dc3545;
      border-color: #dc3545;
    }

    .btn-danger:hover {
      background-color: #c82333;
      border-color: #c82333;
    }

    /* Animations */
    @keyframes fadeInDown {
      0% {
        opacity: 0;
        transform: translateY(-20px);
      }
      100% {
        opacity: 1;
        transform: translateY(0);
      }
    }

    @keyframes fadeInUp {
      0% {
        opacity: 0;
        transform: translateY(20px);
      }
      100% {
        opacity: 1;
        transform: translateY(0);
      }
    }
.description {
  white-space: pre-wrap; /* Permet le retour à la ligne et préserve les espaces */
  word-wrap: break-word; /* Permet de casser les mots longs si nécessaire */
  overflow-wrap: break-word; /* Alternative à word-wrap pour une meilleure compatibilité */
  margin-bottom: 20px; /* Espacement en bas */
}
    /* No annonces message */
    .text-muted {
      font-size: 18px;
      color: #6c757d;
    }
  </style>

{% endblock %}