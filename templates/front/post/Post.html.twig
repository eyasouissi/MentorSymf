                        <span class="like-count">{{ post.likes|default(0) }}</span>
                    </button>
                    {# Liked by user bubbles #}
                    {% if post.likedByUsers|length > 0 %}
                        <div class="liked-by-bubbles" data-post-id="{{ post.id }}">
                            {% for user in post.likedByUsers|slice(0, 3) %}
                                <img src="{{ asset('uploads/pfp/' ~ user.pfp) }}" 
                                     alt="{{ user.name }}" 
                                     class="liked-user-bubble"
                                     title="{{ user.name }}">
                            {% endfor %}
                            {% if post.likedByUsers|length > 3 %}
                                <span class="liked-count">+{{ post.likedByUsers|length - 3 }}</span>
                            {% endif %}
                            
                            {# Liked by dropdown #}
                            <div class="liked-by-dropdown" id="liked-dropdown-{{ post.id }}">
                                <div class="dropdown-header">
                                    <h4>Liked by</h4>
                                    <button class="close-dropdown">&times;</button>
                                </div>
                                <div class="liked-users-list">
                                    {% for user in post.likedByUsers %}
                                        <div class="liked-user">
                                            <img src="{{ asset('uploads/pfp/' ~ user.pfp) }}" 
                                                 alt="{{ user.name }}" 
                                                 class="user-bubble">
                                            <span class="username">{{ user.name }}</span>
                                        </div>
                                    {% endfor %}
                                </div>
                            </div>
                        </div>
