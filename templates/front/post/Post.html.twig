{% extends 'front/base.html.twig' %}

{% block title %}Forum - {{ forum.title }}{% endblock %}


{% block body %}

<!-- Header Container with GIF -->
<div class="header-container" style="background-color: #8c84a1; padding: 20px 0; margin-bottom: 20px; text-align: center;">
    <div class="container">
        <div style="margin-bottom: 15px;">
            <h2 style="font-size: 24px; margin: 0; color: white;">Whatâ€™s on your mind? ðŸ’¡
</h2>
            <p style="font-size: 14px; color: white; margin: 5px 0 0;">Post about your latest study session, share an interesting fact, or ask a question. Letâ€™s keep the conversation going !</p>
        </div>
        <div style="text-align: center;">
            <img src="{{ asset('assets/img/post.gif') }}" alt="Post GIF" style="max-width: 200px;"/>
        </div>
    </div>
</div>
<div class="container">
    <h1>{{ forum.title }}</h1>

    {% for message in app.flashes('success') %}
        <div class="alert alert-success">{{ message }}</div>
    {% endfor %}
    {% for message in app.flashes('error') %}
        <div class="alert alert-danger">{{ message }}</div>
    {% endfor %}

    <hr>

<!-- Create Post Section -->
<div class="create-post-container">
    <div class="post-card">
        <div class="post-header">
            <img src="{{ asset('uploads/pfp/' ~ app.user.pfp) }}" 
                 class="user-avatar"
                 alt="Your avatar">
            {{ form_start(form, {'attr': {'enctype': 'multipart/form-data', 'class': 'create-post-form'}}) }}
                <div class="form-group">
                    {{ form_widget(form.content, {
                        'attr': {
                            'class': 'post-input',
                            'placeholder': "What's on your mind?",
                            'rows': 3,
                            'id': 'post_content'
                        }
                    }) }}
                    <div class="word-counter">
                            <span id="word-count">0/2000</span>
                        </div>
                    <div class="form-controls">
                        <div class="media-controls">
                            {# Image Upload Button #}
                            <label for="post_photos" class="media-btn">
                                <svg class="media-icon" viewBox="0 0 24 24">
                                    <path d="M19 5v14H5V5h14m0-2H5c-1.1 0-2 .9-2 2v14c0 1.1.9 2 2 2h14c1.1 0 2-.9 2-2V5c0-1.1-.9-2-2-2zm-4.86 8.86l-3 3.87L9 13.14 6 17h12l-3.86-5.14z"/>
                                </svg>
                            </label>
                            
                            {# Emoji Picker Container #}
                            <div class="emoji-picker-container">
                                <button type="button" class="media-btn emoji-picker-btn">
                                    <svg class="media-icon" viewBox="0 0 24 24">
                                        <path d="M12 22C6.477 22 2 17.523 2 12S6.477 2 12 2s10 4.477 10 10-4.477 10-10 10zm0-2a8 8 0 1 0 0-16 8 8 0 0 0 0 16zm-5-7h2a3 3 0 0 0 6 0h2a5 5 0 0 1-10 0zm1-2a1.5 1.5 0 1 1 0-3 1.5 1.5 0 0 1 0 3zm8 0a1.5 1.5 0 1 1 0-3 1.5 1.5 0 0 1 0 3z"/>
                                    </svg>
                                </button>
                                <div class="emoji-list" id="emoji-list"></div>
                            </div>
                        </div>
                        
                        <button type="submit" class="submit-post-btn">
                            <svg class="send-icon" viewBox="0 0 24 24">
                                <path d="M2.01 21L23 12 2.01 3 2 10l15 2-15 2z"/>
                            </svg>
                            Post
                        </button>
                    </div>
                </div>
                {{ form_row(form.photos, {'attr': {'class': 'd-none'}}) }}
            {{ form_end(form) }}
        </div>
    </div>
</div>
    <hr>

 <h2>Posts</h2>
{% if posts is empty %}
    <p>No posts yet.</p>
{% else %}
    {% for post in posts|reverse %}
        {# Each post is wrapped in its own card div #}
        <div class="card mb-3" id="post-{{ post.id }}" 
             data-source-lang="{{ detected_lang[post.id] }}" 
             data-target-lang="{{ user_locale }}"
             data-original-content="{{ post.content|escape('html_attr') }}">
            <div class="card-body">
                <!-- Post Header -->
                <div class="post-header">
                    <img src="{{ asset('uploads/pfp/' ~ post.user.pfp) }}" alt="{{ post.user.name }}" class="user-photos">
                    <div class="user-info">
                        <span class="user-name">{{ post.user.name }}</span>
                        <span class="post-date">{{ post.createdAt|date('Y-m-d H:i') }}</span>
                    </div>
                </div>

                <!-- Post Content -->
                <div class="post-content" id="post-content-{{ post.id }}">
                    <p class="card-text">{{ post.content }}</p>
                    {% if post.photos %}
                        <div class="post-photos-container">
                            <div class="post-photos-slider" id="slider-{{ post.id }}">
                                {% for photo in post.photos %}
                                    <div class="slide" data-index="{{ loop.index0 }}">
                                        <img src="{{ asset('uploads/photos/' ~ photo) }}" 
                                             class="post-photo"
                                             loading="lazy">
                                    </div>
                                {% endfor %}
                            </div>
                            
                            <!-- Navigation Arrows -->
                            {% if post.photos|length > 1 %}
                                <div class="gallery-nav">
                                    <button class="nav-arrow prev-arrow" onclick="slide(-1, {{ post.id }})">
                                        <svg viewBox="0 0 24 24" width="24" height="24">
                                            <path d="M15.41 16.59L10.83 12l4.58-4.59L14 6l-6 6 6 6 1.41-1.41z"/>
                                        </svg>
                                    </button>
                                    <button class="nav-arrow next-arrow" onclick="slide(1, {{ post.id }})">
                                        <svg viewBox="0 0 24 24" width="24" height="24">
                                            <path d="M8.59 16.59L13.17 12 8.59 7.41 10 6l6 6-6 6-1.41-1.41z"/>
                                        </svg>
                                    </button>
                                </div>
                                
                                <!-- Gallery Indicator -->
                                <div class="gallery-indicator" id="indicator-{{ post.id }}">
                                    <span class="current-index">1</span>/{{ post.photos|length }}
                                </div>
                            {% endif %}
                        </div>
                    {% endif %}
                </div>
            </div>

            {# Image Modal #}
            <div class="image-modal" id="image-modal-{{ post.id }}">
                <div class="modal-overlay" onclick="closeModal()"></div>
                <div class="modal-content">
                    <img class="modal-image" id="modal-image-{{ post.id }}">
                    <button class="modal-close" onclick="closeModal()">&times;</button>
                </div>
            </div>

            <!-- Translation Controls -->
            <div class="translation-controls">
                <div class="translate-dropdown">
                    <button class="translate-button">
                        <span class="icon">
