        .mentor-chatbot__window--active {
            transform: translateY(0);
            opacity: 1;
            visibility: visible;
        }

        /* Header */
        .mentor-chatbot__header {
            padding: 18px 24px;
            background: #8c84a1;
            border-radius: 12px 12px 0 0;
            display: flex;
            justify-content: space-between;
            align-items: center;
        }

        .mentor-chatbot__title {
            color: white;
            margin: 0;
            font-size: 1.1rem;
            font-weight: 600;
        }

        .mentor-chatbot__close {
            background: none;
            border: none;
            color: white;
            cursor: pointer;
            font-size: 1.5rem;
            line-height: 1;
        }

        /* Messages Container */
        .mentor-chatbot__messages {
            flex: 1;
            padding: 20px;
            overflow-y: auto;
            background: #f8f9fa;
            display: flex;
            flex-direction: column;
            gap: 12px;
        }

