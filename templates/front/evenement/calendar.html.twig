{% extends back/baseback.html.twug%}


{% block stylesheets %}
    <link href="https://cdn.jsdelivr.net/npm/fullcalendar@5.3.0/main.min.css" rel="stylesheet" />
    <style>
        /* Ensuring the calendar has full width and a fixed height */
        #calendar {
            width: 100%;
            height: 80vh; /* Adjust the height to be more dynamic */
            margin: 0 auto;
            padding: 20px;
            box-sizing: border-box;
        }
        /* Center the calendar in its container */
        .fc {
            margin: 0 auto;
        }
        /* Style for the return button */
        .return-btn {
            display: inline-block;
            padding: 10px 20px;
            background-color: #007bff;
            color: white;
            text-decoration: none;
            border-radius: 5px;
            margin: 10px 0;
        }
        .return-btn:hover {
            background-color: #0056b3;
        }
    </style>
{% endblock %}

{% block body %}
    <!-- Return Button -->
    <a href="{{ path('evenement_index') }}" class="return-btn">Retour à la liste des événements</a>

    <div id="calendar"></div>

    <script src="https://cdn.jsdelivr.net/npm/fullcalendar@5.3.0/main.min.js"></script>
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            var calendarEl = document.getElementById('calendar');
            var calendar = new FullCalendar.Calendar(calendarEl, {
                initialView: 'dayGridMonth',
                events: {{ data|raw }},
                eventColor: '#378006',  // Optional: Event color customization
                headerToolbar: {         // Optional: Add toolbar for navigation
                    left: 'prev,next today',
                    center: 'title',
                    right: 'dayGridMonth,dayGridWeek,dayGridDay'
                }
            });
            calendar.render();
        });
    </script>
{% endblock %}
