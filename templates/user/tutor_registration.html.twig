<!DOCTYPE html>
<html>
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Tutor Registration | Your App Name</title>
  <link rel="stylesheet" href="{{ asset('assets/css/registration.css') }}">

<style>
    /* Global Styles */
    * {
      margin: 0;
      padding: 0;
      box-sizing: border-box;
      font-family: "Open Sans", sans-serif;
    }

    /* Form Wrapper */
    .wrapper {
      width: 400px;
      border-radius: 8px;
      padding: 30px;
      text-align: center;
      border: 1px solid rgba(0, 0, 0, 0.5); /* Changed border color to black */
      backdrop-filter: blur(8px);
      -webkit-backdrop-filter: blur(8px);
      background: rgba(255, 255, 255, 0.8); /* Lightened background for better contrast */
    }

    /* Form Title */
    h2 {
      font-size: 2rem;
      margin-bottom: 20px;
      color: #000; /* Changed to black */
    }

    /* Input Fields */
    .input-field {
      position: relative;
      border-bottom: 2px solid #ccc;
      margin: 15px 0;
    }

    .input-field label {
      position: relative;
      color: #000; /* Changed to black */
      font-size: 16px;
      pointer-events: none;
      transition: 0.15s ease;
    }

    .input-field input,
    .input-field select {
      width: 100%;
      height: 40px;
      background: transparent;
      border: none;
      outline: none;
      font-size: 16px;
      color: #000; /* Changed to black */
    }

    .input-field input:focus ~ label,
    .input-field input.filled ~ label {
      font-size: 0.8rem;
      top: 10px;
      transform: translateY(-120%);
    }

    /* Gender Field */
    .gender-options {
      display: flex; /* Display options in a row */
      gap: 20px; /* Space between the options */
      margin-top: 10px;
    }

    .gender-option {
      display: flex;
      align-items: center; /* Align radio button and label vertically */
      gap: 5px; /* Space between the radio button and label */
    }

    .gender-options input[type="radio"] {
      margin: 0; /* Remove default margin */
    }

    .gender-label {
      margin: 0; /* Remove default margin */
      color: #000; /* Changed to black */
    }

    /* Target the country dropdown specifically */
    #studentRegistrationForm_country {
      color: #000; /* Changed to black */
    }

    /* Target the dropdown options */
    #studentRegistrationForm_country option {
      color: #000; /* Black text for the options */
      background-color: #fff; /* White background for the options */
    }

    /* Submit Button */
    .btn {
      background: #fff;
      color: #000; /* Changed to black */
      font-weight: 600;
      border: none;
      padding: 12px 20px;
      cursor: pointer;
      border-radius: 3px;
      font-size: 16px;
      border: 2px solid transparent;
      transition: 0.3s ease;
    }

    .btn:hover {
      color: #000; /* Changed to black */
      border-color: #000; /* Changed to black */
      background: rgba(255, 255, 255, 0.15);
    }

    /* Link Back to Registration Choice */
    .register {
      text-align: center;
      margin-top: 30px;
      color: #000; /* Changed to black */
    }

    .wrapper a {
      color: #000; /* Changed to black */
      text-decoration: none;
    }

    .wrapper a:hover {
      text-decoration: underline;
    }

    /* Error Messages */
    .form-error {
      color: #ff4d4d; /* Red color for errors (unchanged) */
      font-size: 14px;
      margin-top: 5px;
      text-align: left;
      display: block;
    }

    /* Remove default Symfony error list styling */
    .form-error ul {
      list-style: none;
      padding: 0;
      margin: 0;
    }

    /* Add spacing between error messages */
    .form-error ul li:not(:last-child) {
      margin-bottom: 10px;
    }

    /* Highlight input fields with errors */
    .input-field.has-error {
      border-bottom: 2px solid #ff4d4d;
    }

    .input-field.has-error label {
      color: #ff4d4d; /* Red color for error labels (unchanged) */
    }

    /* Responsive Design */
    @media (max-width: 480px) {
      .wrapper {
        width: 100%;
        padding: 20px;
      }

      h2 {
        font-size: 1.5rem;
      }

      .gender-options {
        flex-direction: column;
        gap: 10px;
      }
    }
</style>
</head>
<body>
  <div class="wrapper">
    <h2>Register as Tutor</h2>
    {% for label, messages in app.flashes %}
        {% for message in messages %}
            <div class="alert alert-{{ label }}">
                {{ message }}
            </div>
        {% endfor %}
    {% endfor %}
    {{ form_start(tutorRegistrationForm, { 'attr': { 'class': 'glassmorphism-form', 'novalidate': 'novalidate' } }) }}

    {# Name Field #}
    <div class="input-field {{ form_errors(tutorRegistrationForm.name) ? 'has-error' }}">
      {{ form_widget(tutorRegistrationForm.name, { 'attr': { 'class': 'form-control', 'placeholder': 'Enter your name' } }) }}
    </div>
    {% if form_errors(tutorRegistrationForm.name) %}
      <div class="form-error">
        {{ form_errors(tutorRegistrationForm.name) }}
      </div>
    {% endif %}

    {# Email Field #}
    <div class="input-field {{ form_errors(tutorRegistrationForm.email) ? 'has-error' }}">
      {{ form_widget(tutorRegistrationForm.email, { 'attr': { 'class': 'form-control', 'placeholder': 'Enter your email' } }) }}
    </div>
    {% if form_errors(tutorRegistrationForm.email) %}
      <div class="form-error">
        {{ form_errors(tutorRegistrationForm.email) }}
      </div>
    {% endif %}

    {# Password Field #}
    <div class="input-field {{ form_errors(tutorRegistrationForm.plainPassword) ? 'has-error' }}">
      {{ form_widget(tutorRegistrationForm.plainPassword, { 'attr': { 'class': 'form-control', 'placeholder': 'Enter your password' } }) }}
    </div>
    {% if form_errors(tutorRegistrationForm.plainPassword) %}
      <div class="form-error">
        {{ form_errors(tutorRegistrationForm.plainPassword) }}
      </div>
    {% endif %}

    {# Speciality Field (added) #}
    <div class="input-field {{ form_errors(tutorRegistrationForm.speciality) ? 'has-error' }}">
      {{ form_widget(tutorRegistrationForm.speciality, { 'attr': { 'class': 'form-control', 'placeholder': 'Enter your speciality' } }) }}
    </div>
    {% if form_errors(tutorRegistrationForm.speciality) %}
      <div class="form-error">
        {{ form_errors(tutorRegistrationForm.speciality) }}
      </div>
    {% endif %}

    {# Diploma Upload Field (optional) #}
    <div class="input-field {{ form_errors(tutorRegistrationForm.diplome) ? 'has-error' }}">
      {{ form_widget(tutorRegistrationForm.diplome, { 'attr': { 'class': 'form-control' } }) }}
    </div>
    {% if form_errors(tutorRegistrationForm.diplome) %}
      <div class="form-error">
        {{ form_errors(tutorRegistrationForm.diplome) }}
      </div>
    {% endif %}

  {# Gender Field #}
    <div class="input-field {{ form_errors(tutorRegistrationForm.gender) ? 'has-error' }}">
      <label>Gender:</label>
      <div class="gender-options">
        {% for child in tutorRegistrationForm.gender %}
          <div class="gender-option">
            {{ form_widget(child) }} {# Render the radio button #}
            {{ form_label(child, null, { 'label_attr': { 'class': 'gender-label' } }) }} {# Render the label #}
          </div>
        {% endfor %}
      </div>
      {{ form_errors(tutorRegistrationForm.gender) }}
    </div>

    {# Age Field #}
    <div class="input-field {{ form_errors(tutorRegistrationForm.age) ? 'has-error' }}">
      {{ form_widget(tutorRegistrationForm.age, { 'attr': { 'class': 'form-control' , 'placeholder': 'Enter your age'} }) }}
    </div>
    {% if form_errors(tutorRegistrationForm.age) %}
      <div class="form-error">
        {{ form_errors(tutorRegistrationForm.age) }}
      </div>
    {% endif %}

    {# Country Field #}
    <div class="input-field {{ form_errors(tutorRegistrationForm.country) ? 'has-error' }}">
      {{ form_widget(tutorRegistrationForm.country, { 'attr': { 'class': 'form-control' } }) }}
    </div>
    {% if form_errors(tutorRegistrationForm.country) %}
      <div class="form-error">
        {{ form_errors(tutorRegistrationForm.country) }}
      </div>
    {% endif %}

    {# Submit Button #}
    <button type="submit" class="btn">Register</button>

    {# Link Back to Registration Choice #}
    <div class="register">
      <p>Or choose another registration type <a href="{{ path('registration_choice') }}">here</a></p>
    </div>
    {{ form_end(tutorRegistrationForm) }}
  </div>

  <script>
    document.addEventListener('DOMContentLoaded', function () {
      const inputs = document.querySelectorAll('.input-field input, .input-field select');
      inputs.forEach(input => {
        if (input.value.trim() !== '') {
          input.classList.add('filled');
        }
        input.addEventListener('input', function () {
          if (input.value.trim() !== '') {
            input.classList.add('filled');
          } else {
            input.classList.remove('filled');
          }
        });
        input.addEventListener('focus', function () {
          input.classList.add('filled');
        });
        input.addEventListener('blur', function () {
          if (input.value.trim() === '') {
            input.classList.remove('filled');
          }
        });
      });
    });
  </script>
</body>
</html>
